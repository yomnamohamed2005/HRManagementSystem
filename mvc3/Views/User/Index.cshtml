@model IEnumerable<mvc3.viewmodels.userviewmodel>
@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<div class="mt-3 mb-3">
    <a asp-action="create" class="btn btn-primary">Create New User</a>
</div>

<div class="mt-2">
    <form asp-action="Index" method="get" class="row g-2 align-items-center">
        <div class="col-md-8">
            <input class="form-control" placeholder="Search by Email" name="email" />
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-info">Search</button>
        </div>
    </form>
</div>

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.email</td>
                <td>@user.firstname</td>
                <td>@user.lastname</td>
                <td>@user.username</td>
                <td>@string.Join(", ", user.roles)</td>
                <td>
                    <a asp-action="details" asp-route-id="@user.id" class="btn btn-info btn-sm">Details</a>
                </td>
                <td>
                    <a asp-action="edit" asp-route-id="@user.id" class="btn btn-warning btn-sm">Edit</a>
                </td>
                <td>
                    <a asp-action="delete" asp-route-id="@user.id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



