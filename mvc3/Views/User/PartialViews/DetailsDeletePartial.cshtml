@model mvc3.viewmodels.userviewmodel

<div class="form-group">
    <label asp-for="id"></label>
    <input readonly class="form-control" asp-for="id" />
</div>

<div class="form-group">
    <label asp-for="firstname"></label>
    <input readonly class="form-control" asp-for="firstname" />
</div>

<div class="form-group">
    <label asp-for="lastname"></label>
    <input readonly class="form-control" asp-for="lastname" />
</div>

<div class="form-group">
    <label asp-for="username"></label>
    <input readonly class="form-control" asp-for="username" />
</div>

<div class="form-group">
    <label asp-for="email"></label>
    <input readonly class="form-control" asp-for="email" />
</div>

@if (Model.roles != null && Model.roles.Any())
{
    <div class="form-group">
        <label asp-for="roles"></label>
        <select class="form-control" asp-for="roles" asp-items="@(new SelectList(Model.roles))" disabled></select>
    </div>
}

